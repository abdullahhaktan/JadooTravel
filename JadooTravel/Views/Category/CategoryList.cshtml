@model List<ResultCategoryDto>
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-dark text-white text-center">
            <h4 class="mb-0">Kategori Listesi</h4>
        </div>
        <div class="card-body p-4">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Kategori</th>
                        <th>Açıklama</th>
                        <th>Icon Url</th>
                        <th>Durum</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryId</td>
                            <td>@item.CategoryName</td>
                            <td>@item.Description</td>
                            <td>@item.IconUrl</td>
                            <td>@item.Status</td>
                            <td>
                                <a href="/Category/DeleteCategory/@item.CategoryId"
                                   class="btn btn-sm btn-danger">Sil</a>
                            </td>
                            <td>
                                <a href="/Category/UpdateCategory/@item.CategoryId"
                                   class="btn btn-sm btn-primary me-2">Güncelle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="d-flex justify-content-end mt-3">
                <a href="/Category/CreateCategory" class="btn btn-success">
                    + Yeni Kategori
                </a>
            </div>
        </div>
    </div>
</div>
