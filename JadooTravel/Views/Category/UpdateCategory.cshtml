@model GetCategoryByIdDto

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0">Hizmeti Güncelle</h4>
        </div>
        <div class="card-body p-4">
            <form method="post">

                <input type="hidden" asp-for="CategoryId" />

                <div class="mb-3">
                    <label asp-for="CategoryName" class="form-label">Kategori</label>
                    <input type="text" asp-for="CategoryName" class="form-control" placeholder="Kategori" />
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Açıklama</label>
                    <input type="text" asp-for="Description" class="form-control" placeholder="Açıklama" />
                </div>

                <div class="mb-3">
                    <label asp-for="IconUrl" class="form-label">İkon Url</label>
                    <input type="text" asp-for="IconUrl" class="form-control" placeholder="Kategori" />
                </div>

                <div class="mb-3">
                    <label asp-for="Status" class="form-label">Durum</label>
                    <input type="text" asp-for="Status" class="form-control" placeholder="Durum" />
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-success btn-lg">Kategoriyi güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>
