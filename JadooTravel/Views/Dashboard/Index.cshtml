@model List<ResultDestinationDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-8 d-flex align-items-strech">
        <div class="card w-100">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-1">
                    <div>
                        <h5 class="card-title fw-semibold">Tur & Kapasite Grafiği</h5>
                    </div>
                </div>
                <div id="myCustomBarChart"></div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="row">
            <div class="col-lg-12 col-sm-6">
                <div class="card overflow-hidden">
                    <div class="card-body p-4">
                        <h5 class="card-title mb-10 fw-semibold">Fiyat Dağılımı</h5>
                        <div class="row align-items-center">
                            <div class="col-7">
                                <h4 class="fw-semibold mb-3">@ViewBag.TotalDestinations Tur</h4>
                                <div class="d-flex align-items-center mb-2">
                                    <span class="me-1 rounded-circle bg-light-success round-20 d-flex align-items-center justify-content-center">
                                        <i class="ti ti-currency-dollar text-success"></i>
                                    </span>
                                    <p class="text-dark me-1 fs-3 mb-0">Ort: @ViewBag.AveragePrice.ToString("N0")₺</p>
                                </div>
                            </div>
                            <div class="col-5">
                                <div class="d-flex justify-content-center">
                                    <!-- Chart.js CDN -->
                                    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

                                    <div style="width: 500px; max-width: 90%;">
                                        <canvas id="myPieChart"></canvas>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <div class="row align-items-start">
                            <div class="col-8">
                                <h5 class="card-title mb-10 fw-semibold">En Pahalı Tur <hr /> @ViewBag.MaxPriceName</h5>
                                <h4 class="fw-semibold mb-3">@ViewBag.MaxPrice.ToString("N0")₺</h4>
                                <div class="d-flex align-items-center pb-1">
                                    <span class="me-2 rounded-circle bg-light-danger round-20 d-flex align-items-center justify-content-center">
                                        <i class="ti ti-crown text-danger"></i>
                                    </span>
                                    <p class="text-dark me-1 fs-3 mb-0">Maksimum</p>
                                    <p class="fs-3 mb-0">Fiyat</p>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="d-flex justify-content-end">
                                    <div class="text-white bg-danger rounded-circle p-6 d-flex align-items-center justify-content-center">
                                        <i class="ti ti-currency-dollar fs-6"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="earning"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <div class="d-flex mb-4 justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Eklenen son 5 tur</h5>
                </div>

                <div class="table-responsive" data-simplebar>
                    <table class="table table-borderless align-middle text-nowrap">
                        <thead>
                            <tr>
                                <th scope="col">Görsel</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Kapasite</th>
                                <th scope="col">Gün/Gece</th>
                                <th scope="col">Ücret</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="me-4">
                                                <img src="@item.ImageUrl" width="100" height="100" class="rounded-circle"
                                                     alt="" />
                                            </div>
                                            <div>
                                                <h6 class="mb-1 fw-bolder">@item.CityCountry</h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="fs-3 fw-normal mb-0">@item.Description</p>
                                    </td>
                                    <td>
                                        <p class="fs-3 fw-normal mb-0 text-success">
                                            @item.Capacity
                                        </p>
                                    </td>
                                    <td>
                                        <p class="fs-3 fw-normal mb-0 text-success">
                                            @item.DayNight
                                        </p>
                                    </td>
                                    <td>
                                        <span class="badge bg-light-success rounded-pill text-success px-3 py-2 fs-3">@item.Price.ToString("N0")₺</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // 1. Bar Chart (Mevcut)
    var barOptions = {
        chart: {
            type: 'bar',
            height: 300,
            toolbar: { show: false }
        },
        series: [
            {
                name: "Tur Fiyatı",
                type: 'column',
                data: @Html.Raw(Json.Serialize(ViewBag.Prices))
            },
            {
                name: "Kapasite",
                type: 'column',
                data: @Html.Raw(Json.Serialize(ViewBag.Capacities))
            }
        ],
        colors: ['#FFA500', '#00E396'],
        xaxis: {
            categories: @Html.Raw(Json.Serialize(ViewBag.Destinations)),
            labels: { style: { colors: '#6C757D', fontSize: '12px' } }
        },
        yaxis: [
            {
                title: { text: 'Kapasite' },
                labels: { formatter: function(val){ return val; } }
            },
            {
                opposite: true,
                title: { text: 'Fiyat (₺)' },
                labels: { formatter: function(val){ return val.toLocaleString(); } }
            }
        ],
        plotOptions: {
            bar: { columnWidth: '40%', borderRadius: 5 }
        },
        legend: { show: false } // legend kaldırıldı
    };

    var barChart = new ApexCharts(document.querySelector("#myCustomBarChart"), barOptions);
    barChart.render();


            // Controller'da ViewBag ile koyduğumuz JSON'ları alıyoruz
    var labels = @Html.Raw(ViewBag.ChartLabels ?? "[]");
    var data = @Html.Raw(ViewBag.ChartData ?? "[]");

    // İsteğe bağlı: arkaplan renkleri (örnek renk dizisi)
    var backgroundColors = [
        'rgba(255, 99, 132, 0.7)',
        'rgba(54, 162, 235, 0.7)',
        'rgba(255, 206, 86, 0.7)',
        'rgba(75, 192, 192, 0.7)',
        'rgba(153, 102, 255, 0.7)',
        'rgba(255, 159, 64, 0.7)'
    ];

    // Canvas ve Chart.js kurulumu
    var ctx = document.getElementById('myPieChart').getContext('2d');
    var myPieChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: labels,
            datasets: [{
                data: data,
                backgroundColor: backgroundColors.slice(0, data.length),
                borderColor: 'rgba(255,255,255,0.8)',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'right'
                },
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            var label = context.label || '';
                            var value = context.parsed || 0;
                            return label + ': ' + value;
                        }
                    }
                }
            }
        }
    });

    });
</script>