@model List<ResultReservationDto>
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-dark text-white text-center">
            <h4 class="mb-0">Rezervasyon Listesi</h4>
        </div>
        <div class="card-body p-4">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Ad Soyad</th>
                        <th>Email</th>
                        <th>Telefon Numarası</th>
                        <th>Tur / Şehir / Ülke</th>
                        <th class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ReservationId</td>
                            <td>@item.NameSurname</td>
                            <td>@item.Email</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.TurCityCountry</td>
                            <td class="text-center">
                                <a href="/Reservation/UpdateReservation/@item.ReservationId"
                                   class="btn btn-sm btn-primary me-2">Güncelle</a>
                                <a href="/Reservation/DeleteReservation/@item.ReservationId"
                                   class="btn btn-sm btn-danger">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
